<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/tool"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/tool http://www.springframework.org/schema/tool/spring-tool.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">
    <context:annotation-config/>
    <!-- Здесь должны находиться объявления компонентов -->
    <bean id="poeticDuke"
          class="app.PoeticJuggler">
        <constructor-arg value="15"/>
        <constructor-arg ref="sonnet29"/>
    </bean>
    <bean id="sonnet29"
          class="app.Sonnet29"/>
    <bean id="theStage"
          class="app.Stage"
          factory-method="getInstance"/>

    <bean id="auditorium"
          class="app.Auditorium"
          init-method="turnOnLights"
          destroy-method="turnOffLights"/>

    <bean id="kenny"
          class="app.Instrumentalist"
          autowire="byName">
        <property name="song" value="Jingle Bells"/>\
        <property name="instrument" ref="saxophone"/>
    </bean>

    <bean id="instrument"
          class="app.Saxophone"/>

    <bean id="kenny2"
          class="app.Instrumentalist">
        <property name="song" value="Jingle Bells"/>
        <property name="instrument" ref="saxophone"/>
    </bean>

    <bean id="hank"
          class="app.OneManBand">
        <property name="instruments">
            <props>
                <prop key="GUITAR">STRUM STRUM</prop>
                <prop key="CYMBAL">CRASH CRASH</prop>
                <prop key="HARMONICA">HUM HUM</prop>
            </props>
        </property>

    </bean>

    <bean id="carl"
          class="app.Instrumentalist" abstract="true">
        <property name="song" value="#{kenny.song}"/>
    </bean>

    <bean id="harry"
          class="app.Magician">
        <property name="magicBox" ref="magicBox"/>
        <property name="magicWords" value="Bippiti boppity boo"/>
    </bean>

    <bean id="magicBox"
          class="app.MagicBoxImpl">
        <replaced-method
                name="getContents"
                replacer="tigerReplacer"/>
    </bean>

    <bean id="tigerReplacer"
          class="app.TigerReplacer"/>

    <bean id="saxophone"
          class="app.Saxophone"
          autowire-candidate="false"/>

    <bean id="piano"
          class="app.Piano"/>

    <bean id="guitar"
          class="app.Guitar"
          scope="prototype"/>

    <bean id="duke"
          class="app.PoeticJuggler"
          autowire="constructor"/>

    <bean id="stewie"
          class="app.Instrumentalist">
        <lookup-method name="getInstrument" bean="guitar"/>
        <property name="song" value="Greensleeves"/>
    </bean>

    <bean id="pianist"
          class="app.Instrumentalist"
          abstract="true">
        <property name="song" value="Chopsticks"/>
        <property name="instrument">
            <bean class="app.Piano"/>
        </property>
    </bean>

    <bean id="infoPhone"
          class="app.PhoneNumber">
        <constructor-arg value="888"/>
        <constructor-arg value="555"/>
        <constructor-arg value="1212"/>
    </bean>

    <bean id="contact"
          class="app.Contact">
        <property name="phoneNumber" ref="infoPhone"/>
    </bean>
</beans>